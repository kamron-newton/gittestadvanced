    <con:settings/>
    <con:config>
      <script>Integer maxTime = 180
Integer elapsedTime = 0
Integer delay = 5
def  processbatchjobstatus = testRunner.testCase.getPropertyValue('ProcessBatchJobStatus')
log.info processbatchjobstatus

//Loop until the job status is success
//Check the status every 5 seconds
while (elapsedTime &lt; maxTime){
     if (processbatchjobstatus != "SUCCESS"){
      testRunner.gotoStepByName("GetDataHubProcessBatchJobTask Status")      
     }
     else{
     	testRunner.testCase.setPropertyValue('BatchJobRetrieved', 'False')
     	break
